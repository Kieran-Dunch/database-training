-- Get the top 5 stories by score
SELECT title, score
FROM hacker_news
ORDER BY score DESC
LIMIT 5;

-- Get the total score
SELECT SUM(score)
FROM hacker_news
ORDER BY score DESC

-- Get the total score for each user
SELECT user, SUM(score)
FROM hacker_news
GROUP BY user
HAVING SUM(score) > 200
ORDER BY 2 DESC;

-- average the score for each user to deterine if they dominate the leaderboard
SELECT (517 + 309 + 304 + 282) / 6366.0;

-- find who has sent a rickroll link
SELECT user,
   COUNT(*)
FROM hacker_news
WHERE url LIKE '%watch?v=dQw4w9WgXcQ%'
GROUP BY user
ORDER BY COUNT(*) DESC;

-- see how many times urls to gh, nytimes and medium have been used
SELECT CASE
  WHEN url LIKE '%github%' THEN 'GitHub'
  WHEN url LIKE "%medium.com%" THEN "Medium"
  WHEN url LIKE "%nytimes.com%" THEN "New York Times"
  ELSE "Other"
  END AS 'Source',
  COUNT(*)
FROM hacker_news
GROUP BY 1;
